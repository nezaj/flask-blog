{% extends "shared/layout.tmpl" %}

{% block title %}
  Nezaj's Blog
{% endblock %}

{% block content %}
  <h2>Posts</h2>
  <ul>
    {% for post in posts %}
      <li>
        <a href="{{ url_for('post', title=post.title) }}">{{ post.title }}</a>
      </li>
    {% endfor %}
  </ul>
{% endblock %}

